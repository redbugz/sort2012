extends layout

block content
  body.home-page
    .homepage-container
      .login-box
        .inner-padding
          //img.logo(src='img/logo.png', width='217', height='239', alt='Logo')
          h3 Free & ready to go web chat room.
          p
            a#fsbutton.sb.sb-small.sb-familysearch(href="/auth/familysearch")
              i
              | Sign in with FamilySearch
            br
            br
            em or
            form(method="post", action="/auth/local")
              p
                label(for="username") Username:
                br
                input(type="text", name="username", value="Guest")
                input(type="hidden", name="password", value="none")
              p.buttons
                a#guestbutton.sb.sb-small.sb-linkedin(href="/auth/guest", onclick='$(this).parents("form").submit(); return false;')
                  i
                  | Sign in as Guest

      .slideshow
        #slideshow
          .slide
            h2 Realtime & Free
            .slide-image
