.connection {
  position: absolute;
  text-align: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  z-index: 99;
}
.connection > .alert {
  border-top: 0;
  border-radius: 0 0 4px 4px;
  padding-right: 14px;
  display: inline-block;
}

#temple-state iframe, #floater iframe {
	border: black solid 5px;
	padding: 20px;
	padding-right: 20px;
	width: 90%;
  min-height: 480px;
}

